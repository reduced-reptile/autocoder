extends ../layout

block content
  header
    h1= title
  main
    form(id='basicForm', action='/basic', method='post')
      label(for='problemTitle')
        p= problemTitle
      input(id='problemTitle', name='problemTitle', type='text', size='50', form='basicForm')
      label(for='problemDescription')
        p= problemDescription
      textarea(id='problemDescription', name='problemDescription' rows='4', cols='100', form='basicForm')
      label(for='inputSpeciﬁcation')
        p= inputSpeciﬁcation
      textarea(id='inputSpeciﬁcation', name='inputSpeciﬁcation', rows='4', cols='100', form='basicForm')
      label(for='outputSpeciﬁcation')
        p= outputSpeciﬁcation
      textarea(id='outputSpeciﬁcation', name='outputSpeciﬁcation', rows='4', cols='100', form='basicForm')
      label(for='numberOfTests')
        p= numberOfTests
      input(id='numberOfTests', name='numberOfTests', type='number', min='0', max='5', value='2', form='basicForm')
      br
      br
      input(type='submit' value=submitButtonLabel)